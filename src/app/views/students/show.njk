{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        <section class="image" style="background: url({{ student.avatar_url }}) no-repeat center center / cover"></section>

        <section class="details">

            <h3>Detalhes</h3>

            <div class="item">
                <div>Aluno(a)</div>
                <div>{{ student.name }}</div>
            </div>

            <div class="item">
                <div>E-mail</div>
                <div>{{ student.email }}</div>
            </div>

            <div class="item">
                <div>Aniversário</div>
                <div>{{ student.birthday }}</div>
            </div>

            <div class="item">
                <div>Ano escolar</div>
                <div>{{ student.grade }}</div>
            </div>

            <div class="item">
                <div>Carga horária semanal</div>
                <div>{{ student.weekly_workload }}</div>
            </div>

            <div class="item">
                <div>Aluno de</div>
                <div>{{ student.teacher_name }}</div>
            </div>

            <a href="/students/{{ student.id }}/edit" class="button">Editar</a>

        </section>
    </div>

{% endblock content %}