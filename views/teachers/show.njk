{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        <section class="image" style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover"></section>

        <section class="details">

            <h3>Detalhes</h3>

            <div class="item">
                <div>Professor(a)</div>
                <div>{{ teacher.name }}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{ teacher.age }}</div>
            </div>

            <div class="item">
                <div>Grau de escolaridade</div>
                <div>{{ teacher.graduation }}</div>
            </div>

            <div class="item">
                <div>Tipo de aula</div>
                <div>{{ teacher.class_type }}</div>
            </div>

            <div class="item">
                <div>Disciplinas</div>
                <div>
                    {% for subject in teacher.occupation_area %}
                        <span>{{ subject }}</span>
                    {% endfor %}
                </div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{ teacher.created_at }}</div>
            </div>

            <a href="#" class="button">Editar</a>

        </section>
    </div>

{% endblock content %}